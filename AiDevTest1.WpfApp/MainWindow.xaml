<Window x:Class="AiDevTest1.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AiDevTest1.WpfApp"
        mc:Ignorable="d"
        Title="AiDevTest1 WPF App"
        Height="450"
        Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Hello, WPF!"
                       FontSize="24"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Loaded Connection String:"
                       Margin="0,20,0,5"
                       HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ConnectionStringForDisplay, Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     MinWidth="300"
                     MaxWidth="600"
                     HorizontalAlignment="Center"
                     TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
